<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#00000000"/>
            <stroke
                android:color="#ffffff"
                android:width="3dp"/>
            <corners
                android:radius="25dp"/>
            <padding
                android:bottom="@dimen/main_btn_style_padding"
                android:left="@dimen/main_btn_style_padding"
                android:right="@dimen/main_btn_style_padding"
                android:top="@dimen/main_btn_style_padding"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#83ffffff"/>
            <stroke
                android:color="#ffffff"
                android:width="3dp"/>
            <corners
                android:radius="30dp"/>
            <padding
                android:bottom="@dimen/main_btn_style_padding"
                android:left="@dimen/main_btn_style_padding"
                android:right="@dimen/main_btn_style_padding"
                android:top="@dimen/main_btn_style_padding"/>

        </shape>
    </item>
</selector>