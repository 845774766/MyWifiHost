<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popu_style"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:text="提示"
            android:gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <EditText
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/primary_text"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入添加人手机IP"
                android:minHeight="60dip"
                android:id="@+id/dialog_edit_ip"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/primary_text"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入姓名"
                android:minHeight="60dip"
                android:id="@+id/dialog_edit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/base_text_size"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入专业全称"
                android:minHeight="60dip"
                android:id="@+id/dialog_edit_class"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:visibility="visible"
                android:layout_gravity="center"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:background="@null"
                android:singleLine="true"
                android:layout_marginBottom="20dp"
                android:hint="请输入学号"
                android:minHeight="60dip"
                android:id="@+id/dialog_edit_number"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:textSize="@dimen/base_big_text_size"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:minHeight="120.0dip"
                android:visibility="gone"
                android:paddingBottom="15.0dip"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:paddingTop="15.0dip" />
            <CheckBox
                android:visibility="gone"
                android:id="@+id/dialog_checkbox"
                android:text="同时添加到云端数据库"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:padding="16dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="取消"
                android:layout_marginLeft="35dip"
                android:id="@+id/negativeButton"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:background="@drawable/button_style_white"
                android:layout_width="wrap_content"
                android:layout_height="40dip" />

            <Button
                android:text="确定"
                android:id="@+id/positiveButton"
                android:textColor="#ffffff"
                android:layout_marginRight="35dip"
                android:layout_weight="1"
                android:layout_marginLeft="39dip"
                android:background="@drawable/button_style_bule"
                android:layout_width="wrap_content"
                android:layout_height="40dip" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>