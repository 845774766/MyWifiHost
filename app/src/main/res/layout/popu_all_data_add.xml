<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="IP:"
            android:textColor="@color/primary_text"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/popu_add_ip"
            android:background="@null"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_weight="3"
            android:textSize="@dimen/popu_add_text_size"
            android:hint="请输入添加人手机ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="姓名:"
            android:layout_weight="1"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:id="@+id/popu_add_name"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/popu_add_text_size"
            android:gravity="center"
            android:layout_weight="4"
            android:hint="请输入添加人姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:text="专业:"
            android:textColor="@color/primary_text"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:id="@+id/popu_add_class"
            android:textSize="@dimen/popu_add_text_size"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_weight="4"
            android:hint="请输入添加人专业"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="学号:"
            android:layout_weight="1"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:id="@+id/popu_add_number"
            android:textColor="@color/secondary_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/popu_add_text_size"
            android:layout_weight="4"
            android:hint="请输入添加人学号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
